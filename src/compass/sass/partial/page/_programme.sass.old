

/* TABLEAU */

.tg
  display: none
  &.show
    display: block



.nav-day
  padding-left: 30px
  text-align: justify
  background: white
  .current a
    background: $yellow
  li
    display: inline
  a
    display: inline-block
    margin: $space $space $space 0
    padding: .5*$space $space
    font-weight: 700
    border: none

.tg
  clear: both
  font-size: 12px
  margin: 0 0 20px 0
  p
    padding: 0

  thead
    &.onTop
      position: fixed
      z-index: 9
      @extend .wrap
      margin: 0
      top: 0

    th
      background: $dark!important
      border: none
      text-align: center
      font-weight: 700
      font-size: 110%
      padding: 7px 15px!important
      color: white

    .day th
      text-transform: uppercase
      text-align: center
      font-size: 150%
      background: none!important
      font-weight: 700
      color: $dark
      padding: 20px 0!important
      display: none

    .tg-places
      +single-transition(top, .2s)
      &.onTop
        position: fixed
        z-index: 9
        @extend .wrap
        margin: 0
        top: 0


  td, th
    +box-sizing(border-box)
    padding: 15px
    background: white
    border-bottom: 1px solid $light
    border-right: 1px solid $light
    vertical-align: top

  hr
    display: block
    border: none!important
    width: 100%
    height: $space!important



  .tg-heure
    font-weight: 900
    padding: 0
    width: 1px
    font-size: 1em
    border-right: 2px solid $yellow
    border-left: 1px solid transparent
    z-index: 7
    span
      background: $yellow
      position: absolute
      margin-top: -12px
      padding: 3px 12px
      display: block

  .empty
    background: none no-repeat 50% 50% white
    height: 110px!important
  .tg-numakfe, .tg-terrasse, .tg-atelier, .tg-pulse
    width: 24.5%
  .tg-atelier
    padding-left: 30px
  .intervenant
    font-weight: 700
  .niveau
    font-weight: 900
    font-size: 80%
    line-height: 18px
    vertical-align: top

  h2
    font-weight: 700
    border-bottom: 2px solid $yellow
    display: inline-block
    padding-bottom: .4em
    margin-bottom: .2em
    text-transform: uppercase
  h1
    background: $dark
    color: white
    text-align: center
    font-weight: 900
    padding: 13px 0
    font-size: 1em